//Глава 5 задание 8

#include <iostream>
#include<string>
#include<cstring>
using namespace std;

int main() {
	setlocale(0, "russian");
	char slovo[100];
	int otvet=0;
	cout << "Вводите слова (для завершения введите слово done): "<<endl;
	do
	{
		cin >> slovo;
		otvet++;
	} while (strcmp(slovo, "done"));

		cout << "Кол-во слов: " << otvet-1;


	return 0;
}
