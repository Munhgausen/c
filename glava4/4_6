#include <iostream>
#include<string>
using namespace std;

struct CandyBar
{
	string name;
	double kalorii;
	int ves;
};

int main() {
	CandyBar snack[3] = { 
	{ "Mocha Munch", 2.3, 350 },
	{"Korovka", 3.3, 250},
	{"Ptichee moloko", 5.5, 500}

	};
	cout << "Name: " << snack[0].name<<endl;
	cout << "Kalorii: " << snack[0].ves<<endl;
	cout << "ves: " << snack[0].kalorii<<endl<<endl;

	cout << "Name: " << snack[1].name << endl;
	cout << "Kalorii: " << snack[1].ves << endl;
	cout << "ves: " << snack[1].kalorii << endl << endl;

	cout << "Name: " << snack[2].name << endl;
	cout << "Kalorii: " << snack[2].ves << endl;
	cout << "ves: " << snack[2].kalorii;
		return 0;
}
