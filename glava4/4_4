#include <iostream>
#include<string>
using namespace std;

int main() {
	string first_name;
	string last_name;
	string otvet;
	cout << "Enter your first name: ";
	cin >> first_name;
	cout << "Enter your last name: ";
	cin >> last_name;
	otvet = first_name;
	otvet += ", ";
	otvet += last_name;
	cout << otvet;
		return 0;
}
