#include <iostream>
#include <vector>

using namespace std;

struct box
{
	char maker[40];
	float height;
	float width;
	float lenght;
	float volume;
};

void who_box(box white_box[], int a) {
	cout<<"Название коробки: "<< white_box[a].maker<<endl;
	cout << "Вес коробки: " << white_box[a].maker << endl;
	cout << "Ширина коробки: " << white_box[a].maker << endl;
	cout << "Длина коробки: " << white_box[a].maker << endl;
	cout << "Объем коробки: " << white_box[a].maker << endl;
}

int main() {
	setlocale(0, "russian");
	cout << "Введите кол-во коробок: ";
	int x;
	cin >> x;
	vector <box> white_box(x);
	//box white_box[5];
	for (int i = 0; i < 5; i++) {
		cout << "Введите название коробки #"<<i+1<<": ";
		cin >> white_box[i].maker;
		cout << "Введите ширину коробки " << white_box[i].maker << ": ";
		cin >> white_box[i].width;
		cout << "Введите длину коробки " << white_box[i].maker << ": ";
		cin >> white_box[i].lenght;
		cout << "Введите объем коробки " << white_box[i].maker << ": ";
		cin >> white_box[i].volume;
	}
	cout << "Ввод успешно завершен" << endl;
	cout << "Введите номер необходимой коробки для получения информации: ";
	int a;
	cin >> a;
	return 0;
}
