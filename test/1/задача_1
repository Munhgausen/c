#include <iostream>
using namespace std;

int main()
{
	setlocale(0, "Russian");
	int x;
	cin >> x;
	int a, b, c;
	a = x / 100; //Cчитает сотни
	b = x % 100 / 10; //считает десятки. % - это остаток от деления
	c = x % 10; //считает единицы
	//дальше считает произведение
	int proizv = a*b*c;
	cout <<"произведение 3 чисел: "<< proizv<<endl;
	//проверяет
	//если остаток от деления на 2 равен 0, то число четное
	//т.е 120/2=60 - без остатка - четное
	//а 111/2=55.5 - число(111) нечетное
	if (proizv % 2 == 0)
		cout << "число четное";
	else
		cout << "Число нечетное";

	return 0;
}
