#include <iostream>
#include <ctime>
using namespace std;

int main()
{
	setlocale(0, "Russian");
	int mass[50][50];//могут быть любые числа, это определяет сколько строк и сколько столбцов будет в массиве
	cout << "Кол-во элементов= ";
	int n;
	cin >> n;
	srand(time(NULL)); //позволяет каждый раз генерировать новые числа
	for (int i = 0; i < n; i++) { //i - номер строки
		for (int j = 0; j < n; j++) { //j - номер столбца
			mass[i][j] = rand() % 10; //заполняем случайными числами от 0 до 10
			//srand(time(NULL)); //позволяет каждый раз генерировать новые числа
		}
	}

	int summ = 0; //сумма положительных элементов
	int schet = 0; //кол-во положительных элементов

	for (int i = 0; i < n; i++) { //i - номер строки
		for (int j = 0; j < n; j++) {//j - номер столбца
			if (i < j) {    //если выше основной диагонали
				if (mass[i][j] % 2 == 0) { //и если чсило четное
					summ = summ + mass[i][j];  //прибавляем число к общей сумме
					schet++; //увеличиваем кол-во четных чисел на 1
				}
			}
		}
	}

	cout << "Cумма положительных элементов: " << summ<<endl;
	cout << "Кол-во положительных элементов: " << schet;
return 0;
}
